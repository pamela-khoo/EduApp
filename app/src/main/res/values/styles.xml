<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App_name">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Introduce_Font" >
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">30dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">30sp</item>
    </style>
    <style name="Introduce_Heading">
        <item name="android:textSize">38sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    <style name="Heading">
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/poppins_extrabold</item>
        <item name="android:gravity">center</item>
        <item name="marginHorizontal">20dp</item>
    </style>
    <style name="Back_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentDescription">@string/back_btn</item>
        <item name="minHeight">48dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="srcCompat">@drawable/ic_baseline_arrow_back_24</item>
    </style>
    <style name="Underline_text">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Gender_btn">
        <item name="backgroundTint">@color/yellow</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>